<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/single1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/single1"
                    android:scaleType="fitCenter"
                    android:text="단품1"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/single2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/single2"
                    android:scaleType="fitCenter"
                    android:text="단품2"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/single1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격: 2500원"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/single2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격: 3000원"
                    android:textSize="25dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/single3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/single3"
                    android:scaleType="fitCenter"
                    android:text="단품3"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/single4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/single4"
                    android:scaleType="fitCenter"
                    android:text="단품4"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    tools:srcCompat="@tools:sample/avatars" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/single3_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격: 3500원"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/single4_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격: 4000원"
                    android:textSize="25dp" />

            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>