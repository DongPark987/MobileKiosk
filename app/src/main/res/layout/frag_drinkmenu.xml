<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cokebutton"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/drink1"
            android:scaleType="fitCenter"
            android:text="콜라"
            android:textSize="45dp"
            android:textStyle="bold"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/ciderbutton"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/drink2"
            android:scaleType="fitCenter"
            android:text="사이다"
            android:textSize="45dp"
            android:textStyle="bold"
            tools:srcCompat="@tools:sample/avatars" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/set3_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격: 1200원"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/set4_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격: 1000원"
            android:textSize="25dp" />
    </TableRow>

</TableLayout>