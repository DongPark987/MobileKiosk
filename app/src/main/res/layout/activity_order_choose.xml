<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderChooseActivity">

    <Button
        android:id="@+id/orderlistButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="주문 내역 조회"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/orderlist"
        app:layout_constraintStart_toStartOf="@+id/orderlist"
        app:layout_constraintTop_toBottomOf="@+id/orderlist" />

    <Button
        android:id="@+id/orderButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="주문 하기"
        app:layout_constraintEnd_toEndOf="@+id/order"
        app:layout_constraintStart_toStartOf="@+id/order"
        app:layout_constraintTop_toBottomOf="@+id/order" />

    <ImageView
        android:id="@+id/order"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/order"
        app:layout_constraintBottom_toBottomOf="@+id/orderlist"
        app:layout_constraintStart_toEndOf="@+id/orderlist"
        app:layout_constraintTop_toTopOf="@+id/orderlist" />

    <ImageView
        android:id="@+id/orderlist"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/orderlist"
        app:layout_constraintEnd_toStartOf="@+id/order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>